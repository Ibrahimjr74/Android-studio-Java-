<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductForm">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Product Form"
        android:textSize="22dp"
         android:textStyle="bold"
        android:layout_x="90dp"
        android:layout_y="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="69dp"
        android:text="prdouct code"
        android:textSize="21dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Product_code"
        android:layout_width="270dp"
        android:layout_height="33dp"
        android:layout_x="141dp"
        android:layout_y="62dp"
        android:minWidth="100dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="127dp"
        android:text="Product name"
        android:textSize="21dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Product_name"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_x="138dp"
        android:layout_y="113dp"
        android:minWidth="100dp"
        android:singleLine="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="182dp"
        android:text="Product Price"
        android:textSize="21dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Product_price"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_x="141dp"
        android:layout_y="165dp"
        android:minWidth="100dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/Add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="89dp"
        android:layout_y="242dp"
        android:text="Add Product"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/response"
        android:layout_x="0dp"
        android:layout_y="342dp"
        android:text="Response" />

</AbsoluteLayout>